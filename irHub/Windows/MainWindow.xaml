<hc:Window
    Closing="MainWindow_OnClosing"
    Height="550"
    Loaded="MainWindow_OnLoaded"
    MinHeight="500"
    MinWidth="850"
    ResizeMode="CanResize"
    ShowMaxButton="False"
    Title="irHub"
    Width="900"
    WindowStartupLocation="Manual"
    hc:WindowAttach.SystemBackdropType="Auto"
    mc:Ignorable="d"
    x:Class="irHub.Windows.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <hc:Window.InputBindings>
        <KeyBinding
            Key="Space"
            Modifiers="Control"
            x:Name="ShortcutKeyBinding" />
    </hc:Window.InputBindings>
    <hc:Window.NonClientAreaContent>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Stretch">
            <Menu Margin="5,0,0,0">
                <MenuItem Focusable="False" Header="Project">
                    <MenuItem
                        Command="hc:ControlCommands.OpenLink"
                        CommandParameter="https://github.com/Marijn17s/irHub"
                        Focusable="False"
                        Header="GitHub Repository" />
                    <MenuItem
                        Command="hc:ControlCommands.OpenLink"
                        CommandParameter="https://paypal.me/marijn17s"
                        Focusable="False"
                        Header="Buy me a drink 🍹" />
                </MenuItem>
                <MenuItem
                    Click="AddProgram_OnClick"
                    Focusable="False"
                    Header="New application" />
            </Menu>
        </StackPanel>
    </hc:Window.NonClientAreaContent>

    <Border CornerRadius="8">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="40" MinHeight="40" />
                <RowDefinition Height="5*" />
            </Grid.RowDefinitions>

            <hc:NotifyIcon
                Grid.Row="0"
                Icon="pack://application:,,,/irHub;component/Resources/logo.png"
                Name="TrayIcon"
                Visibility="Hidden">
                <hc:NotifyIcon.ContextContent>
                    <Button
                        Command="hc:ControlCommands.ShutdownApp"
                        Content="Exit"
                        MinWidth="100"
                        Style="{StaticResource ButtonPrimary}" />
                </hc:NotifyIcon.ContextContent>
            </hc:NotifyIcon>

            <Grid Grid.Row="0" Opacity="0.9">
                <Grid.Background>
                    <LinearGradientBrush EndPoint="1,1" StartPoint="0,0">
                        <LinearGradientBrush.GradientStops>
                            <GradientStop Color="#893ADF" Offset="0.1" />
                            <GradientStop Color="#C7409E" Offset="1.0" />
                        </LinearGradientBrush.GradientStops>
                    </LinearGradientBrush>
                </Grid.Background>

                <Image HorizontalAlignment="Left" Source="pack://application:,,,/irHub;component/Resources/iRacingLogoWhite.png" />
                <StackPanel
                    HorizontalAlignment="Right"
                    Margin="0,0,10,0"
                    Orientation="Horizontal">
                    <Button
                        Click="StartAll_OnClick"
                        Content="Start all"
                        Focusable="False"
                        Margin="0,0,2,0"
                        Width="90" />
                    <Button
                        Click="StopAll_OnClick"
                        Content="Stop all"
                        Focusable="False"
                        Margin="2,0,0,0"
                        Width="90" />
                </StackPanel>
            </Grid>

            <hc:TabControl Grid.Row="1" Style="{StaticResource TabControlInLine}">
                <hc:TabItem
                    FontSize="13"
                    Foreground="{DynamicResource TextIconBrush}"
                    Header="Application Manager">
                    <Frame BorderThickness="0" Source="../Pages/ProgramListPage.xaml" />
                </hc:TabItem>
                <hc:TabItem FontSize="13" Header="SOON" />
                <hc:TabItem FontSize="13" Header="Settings">
                    <Frame BorderThickness="0" Source="../Pages/SettingsPage.xaml" />
                </hc:TabItem>
            </hc:TabControl>

            <hc:ScrollViewer
                Grid.Column="0"
                Grid.Row="0"
                Grid.RowSpan="2"
                HorizontalAlignment="Right"
                IsInertiaEnabled="True"
                IsPenetrating="True"
                VerticalScrollBarVisibility="Hidden">
                <StackPanel
                    Margin="0,10,10,10"
                    VerticalAlignment="Top"
                    hc:Growl.GrowlParent="True"
                    hc:Growl.ShowMode="Prepend" />
            </hc:ScrollViewer>
        </Grid>
    </Border>
</hc:Window>
