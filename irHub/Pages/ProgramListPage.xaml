<Page
    HorizontalAlignment="Stretch"
    Title="ProgramListPage"
    VerticalAlignment="Stretch"
    mc:Ignorable="d"
    x:Class="irHub.Pages.ProgramListPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <hc:ScrollViewer HorizontalContentAlignment="Left" Padding="15">
        <hc:TransitioningContentControl TransitionMode="Top2BottomWithFade">
            <hc:FlexPanel
                AlignContent="SpaceAround"
                FlexWrap="Wrap"
                JustifyContent="SpaceAround"
                Name="ProgramsCardPanel" />
        </hc:TransitioningContentControl>
    </hc:ScrollViewer>
</Page>
