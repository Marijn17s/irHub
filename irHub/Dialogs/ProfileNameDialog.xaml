<hc:Window
    Background="{DynamicResource RegionBrush}"
    BorderThickness="0"
    Height="80"
    KeyUp="ProfileNameDialog_OnKeyUp"
    ResizeMode="NoResize"
    ShowCloseButton="False"
    ShowIcon="False"
    ShowInTaskbar="False"
    ShowMaxButton="False"
    ShowMinButton="False"
    ShowNonClientArea="False"
    Width="440"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d"
    x:Class="irHub.Dialogs.ProfileNameDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Border CornerRadius="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="40" />
            </Grid.RowDefinitions>

            <TextBlock
                FontSize="13.5"
                FontWeight="Bold"
                Grid.Row="0"
                HorizontalAlignment="Center"
                IsHitTestVisible="False"
                Text="Choose a name for this profile and hit ENTER when you're done"
                VerticalAlignment="Center" />
            <hc:TextBox
                Grid.Row="1"
                Margin="0,0,0,5"
                MaxWidth="220"
                Name="ProfileNameTextBox"
                Text="{Binding ProfileName, UpdateSourceTrigger=PropertyChanged}" />
        </Grid>
    </Border>
</hc:Window>