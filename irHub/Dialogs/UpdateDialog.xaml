<hc:Window
    Height="700"
    Loaded="UpdateDialog_OnLoaded"
    ResizeMode="NoResize"
    ShowMaxButton="False"
    ShowMinButton="False"
    Width="800"
    WindowStartupLocation="Manual"
    hc:WindowAttach.SystemBackdropType="Auto"
    mc:Ignorable="d"
    x:Class="irHub.Dialogs.UpdateDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:wpf="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*" />
            <RowDefinition Height="9*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock
            FontSize="14"
            FontWeight="Bold"
            Grid.Row="0"
            Margin="10,20,0,0"
            Text="A new version of irHub is available!"
            VerticalAlignment="Top" />
        <TextBlock
            Grid.Row="0"
            Margin="10,50,0,0"
            Name="ReleaseNotesText"
            VerticalAlignment="Top" />
        <TextBlock
            FontSize="15"
            FontWeight="Bold"
            Grid.Row="0"
            Margin="10,0,0,0"
            Text="Release Notes:"
            VerticalAlignment="Bottom" />
        <wpf:WebView2
            Grid.Row="1"
            Height="500"
            Name="WebView"
            NavigationStarting="WebView_OnNavigationStarting" />
        <Button
            BorderBrush="{StaticResource PrimaryBrush}"
            BorderThickness="2"
            Click="Update_OnClick"
            Content="Update"
            Grid.Row="2"
            Height="40"
            Margin="0,0,100,5"
            VerticalContentAlignment="Center"
            Width="90" />
        <Button
            Click="Cancel_OnClick"
            Content="Not now"
            Grid.Row="2"
            Height="40"
            Margin="100,0,0,5"
            VerticalContentAlignment="Center"
            Width="90" />
    </Grid>
</hc:Window>
