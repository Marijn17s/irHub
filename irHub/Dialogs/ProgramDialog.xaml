<hc:Window
    Background="{DynamicResource RegionBrush}"
    BorderThickness="0"
    Height="350"
    ResizeMode="NoResize"
    ShowCloseButton="False"
    ShowIcon="False"
    ShowInTaskbar="False"
    ShowMaxButton="False"
    ShowMinButton="False"
    ShowNonClientArea="False"
    Width="600"
    mc:Ignorable="d"
    x:Class="irHub.Dialogs.ProgramDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Border CornerRadius="10">
        <Grid>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="5" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="5" />
                </Grid.ColumnDefinitions>

                <hc:SimpleStackPanel Grid.Column="1" Margin="20,25,20,10">
                    <TextBox Foreground="White" Text="{Binding Name}" />
                    <!--<TextBlock Text="{Binding TotalInvestmentWeight, StringFormat=N2}" />
                <TextBlock Text="{Binding Investment.StartDate, StringFormat=dd-MMM-yyyy}" />-->
                    <Label
                        BorderThickness="0"
                        Content="File path:"
                        Foreground="White"
                        HorizontalAlignment="Left" />
                    <TextBox Text="{Binding FilePath}" />
                </hc:SimpleStackPanel>

                <hc:SimpleStackPanel Grid.Column="2" Margin="20,25,20,10">
                    <TextBlock Foreground="White" Text="{Binding Name}" />
                    <!--<TextBlock Text="{Binding TotalInvestmentWeight, StringFormat=N2}" />
                <TextBlock Text="{Binding Investment.StartDate, StringFormat=dd-MMM-yyyy}" />-->
                    <Label
                        BorderThickness="0"
                        Content="File path:"
                        Foreground="White"
                        HorizontalAlignment="Left" />
                    <TextBlock Text="{Binding FilePath}" />
                </hc:SimpleStackPanel>
            </Grid>
            <Button
                Click="SaveButton_OnClick"
                Foreground="{DynamicResource SuccessBrush}"
                Height="22"
                HorizontalAlignment="Right"
                Margin="0,4,30,0"
                Padding="0"
                Style="{StaticResource ButtonIcon}"
                VerticalAlignment="Top"
                Width="22"
                hc:IconElement.Geometry="{StaticResource SuccessGeometry}" />
            <Button
                Click="CancelButton_OnClick"
                Foreground="{DynamicResource WarningBrush}"
                Height="22"
                HorizontalAlignment="Right"
                Margin="0,4,4,0"
                Padding="0"
                Style="{StaticResource ButtonIcon}"
                VerticalAlignment="Top"
                Width="22"
                hc:IconElement.Geometry="{StaticResource ErrorGeometry}" />
        </Grid>
    </Border>
</hc:Window>